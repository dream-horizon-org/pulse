{
  "name": "@dreamhorizonorg/pulse-react-native",
  "version": "0.0.1",
  "description": "Production-grade observability SDK for React Native applications with OpenTelemetry support. Real-time monitoring, error tracking, performance insights, and distributed tracing.",
  "main": "./lib/module/index.js",
  "types": "./lib/typescript/src/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.tsx",
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json",
    "./app.plugin.js": "./app.plugin.js"
  },
  "bin": {
    "pulse-cli": "./scripts/pulse-cli.js"
  },
  "files": [
    "src",
    "lib",
    "scripts",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "*.plugin.js",
    "plugin/build",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-pulse-react-native-otel-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib plugin/build",
    "build:plugin": "tsc -p plugin/tsconfig.json",
    "prepare": "npm run build:plugin && bob build",
    "release": "release-it --only-version",
    "pulse-cli": "node scripts/pulse-cli.js"
  },
  "keywords": [
    "react-native",
    "opentelemetry",
    "observability",
    "monitoring",
    "error-tracking",
    "performance",
    "tracing",
    "analytics",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dream-horizon-org/pulse.git",
    "directory": "pulse-react-native-otel"
  },
  "author": "DreamHorizon <https://dreamhorizon.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dream-horizon-org/pulse/issues"
  },
  "homepage": "https://github.com/dream-horizon-org/pulse/tree/main/pulse-react-native-otel#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@evilmartians/lefthook": "^1.12.3",
    "@expo/config-plugins": "^54.0.0",
    "@react-native-community/cli": "20.0.1",
    "@react-native/babel-preset": "0.81.1",
    "@react-native/eslint-config": "^0.81.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.1.0",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jest": "^29.11.0",
    "eslint-plugin-prettier": "^5.5.4",
    "expo-module-scripts": "^5.0.8",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "react": "19.1.0",
    "react-native": "0.81.1",
    "react-native-builder-bob": "0.30.2",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "PulseReactNativeOtelSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "android": {
      "javaPackageName": "com.pulsereactnativeotel"
    }
  },
  "create-react-native-library": {
    "languages": "kotlin-objc",
    "type": "turbo-module",
    "version": "0.54.8"
  },
  "dependencies": {
    "commander": "^14.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "app.plugin": "./app.plugin.js",
  "peerDependencies": {
    "@expo/config-plugins": "*",
    "react": "*",
    "react-native": "*"
  }
}
